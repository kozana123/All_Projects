<Window x:Class="SafeDevelopmentSemesterProject.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeDevelopmentSemesterProject"
        mc:Ignorable="d"
        Title="ForgotPasswordWindow" Height="730" Width="548">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFD6233C" Offset="0.7"/>
            <GradientStop Color="#FFDA455A" Offset="1"/>
            <GradientStop Color="#FFDA455A" Offset="0"/>
            <GradientStop Color="#FFD6233C" Offset="0.3"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Your Email: " HorizontalAlignment="Left" Margin="73,216,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="userEmail" HorizontalAlignment="Left" Margin="177,220,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="282" FontSize="18" FontFamily="Comic Sans MS"/>
        <Button Content="Send Pin" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" FontSize="18" Click="SendPinBtn" FontFamily="Comic Sans MS"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,131,0,0" TextWrapping="Wrap" Text="Reset Password" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <TextBlock x:Name="EnterPinLable" HorizontalAlignment="Center" Margin="0,408,0,0" TextWrapping="Wrap" Text="Enter Your Pin" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Visibility="Hidden" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="pinText" HorizontalAlignment="Center" Margin="0,459,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" FontSize="18" TextAlignment="Center" Visibility="Hidden" FontFamily="Comic Sans MS"/>
        <Button x:Name="confimBtn" Content="Confirm" HorizontalAlignment="Center" Margin="0,508,0,0" VerticalAlignment="Top" FontSize="18" Click="ConfirnPin" Visibility="Hidden" FontFamily="Comic Sans MS"/>

        <Button Content="X" HorizontalAlignment="Left" Margin="490,33,0,0" VerticalAlignment="Top" FontSize="20" Click="BtnCloseProgrem" Width="31" FontFamily="Comic Sans MS"/>
        <Button Content="←" HorizontalAlignment="Left" Margin="47,33,0,0" VerticalAlignment="Top" FontSize="20" Width="31" Click="BtnPreviosPage" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
