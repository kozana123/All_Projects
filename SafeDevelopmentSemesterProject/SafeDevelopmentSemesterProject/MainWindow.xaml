<Window x:Class="SafeDevelopmentSemesterProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeDevelopmentSemesterProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="730" Width="548">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFD6233C" Offset="0.7"/>
            <GradientStop Color="#FFDA455A" Offset="1"/>
            <GradientStop Color="#FFDA455A" Offset="0"/>
            <GradientStop Color="#FFD6233C" Offset="0.3"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="93,252,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" FontSize="20" FontFamily="Comic Sans MS" />
        <TextBox x:Name="userEmail" HorizontalAlignment="Left" Margin="224,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246" FontSize="20" FontFamily="Comic Sans MS"/>
        <Label Content="Loview" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top" FontSize="50" FontFamily="Comic Sans MS" FontWeight="Bold" />
        <TextBlock HorizontalAlignment="Left" Margin="93,330,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" FontSize="20" FontFamily="Comic Sans MS"/>
        <Button Content="Sign In" HorizontalAlignment="Center" Margin="0,546,0,0" VerticalAlignment="Top" Height="50" Width="134" FontSize="20" Click="BtnLogin" FontFamily="Comic Sans MS"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="472,34,0,0" VerticalAlignment="Top" FontSize="30" Width="42" Click="BtnCloseProgrem"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,493,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Comic Sans MS">
         <Hyperlink Click="Register" FontSize="17">Register Now</Hyperlink>
        </TextBlock>
        <PasswordBox x:Name="userPassword" HorizontalAlignment="Left" Margin="224,328,0,0" VerticalAlignment="Top" Width="246" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="360,370,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Comic Sans MS">
            <Hyperlink FontSize="15" Click="ForgotPassword"><Run Text="Forgot Password"/></Hyperlink>
        </TextBlock>

    </Grid>
</Window>
