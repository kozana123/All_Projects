<Window x:Class="SafeDevelopmentSemesterProject.CreateNewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeDevelopmentSemesterProject"
        mc:Ignorable="d"
        Title="CreateNewPasswordWindow" Height="342" Width="548">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFD6233C" Offset="0.7"/>
            <GradientStop Color="#FFDA455A" Offset="1"/>
            <GradientStop Color="#FFDA455A" Offset="0"/>
            <GradientStop Color="#FFD6233C" Offset="0.3"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,62,0,0" TextWrapping="Wrap" Text="Create Password" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <Label Content="New Password:" HorizontalAlignment="Left" Margin="69,134,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" FontFamily="Comic Sans MS"/>
        <Button Content="Save Password" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Click="SavePassword" FontFamily="Comic Sans MS"/>
        <PasswordBox x:Name="userPassword" HorizontalAlignment="Left" Margin="195,139,0,0" VerticalAlignment="Top" Width="168" FontSize="14" />

        <Button Content="X" HorizontalAlignment="Left" Margin="499,33,0,0" VerticalAlignment="Top" FontSize="20" Click="BtnCloseProgrem" Width="31" FontFamily="Comic Sans MS"/>
        <Button Content="←" HorizontalAlignment="Left" Margin="47,33,0,0" VerticalAlignment="Top" FontSize="20" Width="31" Click="BtnPreviosPage" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
